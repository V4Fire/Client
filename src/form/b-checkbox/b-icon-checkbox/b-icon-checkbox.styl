@import "super/i-input/i-input.styl"
@import "traits/i-width/i-width.styl"
@import "traits/i-size/i-size.styl"

$p = {
	width: auto
}

b-icon-checkbox extends i-input
	// @stlint-disable
	i-width({helpers: $p.widthHelpers, selector: ("&__wrapper")})
	i-size({helpers: $p.sizeHelpers, selector: ("&__wrapper")})
	// @stlint-enable

	display block

	&__wrapper
		display flex
		align-items center
		width $p.width
		color currentColor
		text-decoration none

		&:active
			{$p.onActive}
