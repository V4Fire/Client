$p = {
	color: #4B494B
	backgroundColor: #FFF
	hoverColor: #FFF
	hoverBackgroundColor: darken(#006358, 30%)
	checkedColor: #FFF
	checkedBackgroundColor: #006358
}

b-icon-checkbox
	color $p.color

	&__wrapper
		margin-bottom 1em
		padding 1em
		border 1px solid lighten($p.color, 60%)
		background $p.backgroundColor

		&:hover
			background $p.hoverBackgroundColor
			color $p.hoverColor

			span
				color @color

	&_checked_true &__wrapper
		background $p.checkedBackgroundColor
		color $p.checkedColor
		border-color $p.hoverBackgroundColor

		span
			color @color

		&:hover
			color darken($p.hoverColor, 5%)
			background darken($p.hoverBackgroundColor, 7%)
			border-color $p.hoverBackgroundColor

			span
				color @color

	&__cell + &__cell
		margin-left 0.5em

	&__cell:last-child
		margin-left auto
		padding-left 3em

	&__desc
		margin-top 0.3em
		font-size 0.8em
		color lighten($p.color, 20%)

	&_checked_true &__desc
		color darken($p.checkedColor, 10%)

	&__wrapper:hover &__desc
		color darken($p.hoverColor, 10%)
