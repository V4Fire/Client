@import "super/i-input/i-input.styl"

$p = {
	accessHelpers: true
	visibleHelpers: true
}

b-checkbox extends i-input
	position relative
	display inline-block

	&__wrapper
		display flex
		cursor pointer

	&__checkbox
		display block
		cursor pointer

	&__label
		user-select none

	&_checked_true
		background red

	&__hidden-input
		position absolute
		zIndex(underall)
		opacity 0
