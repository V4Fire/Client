$p = {
	width: 1.2em
	bgColor: #FFF
	borderColor: #CCC
	borderActiveColor: #006358
	checkedBgColor: #006358
	checkedIconBgColor: #FFF
	messageHelpers: true
}

b-checkbox
	&__label
		margin-left 0.2em

	&__wrapper
		align-items center

	&__wrapper:hover &__box
		background-color darken($p.bgColor, 5%)

	&_focused_true &__box
		border 1px dotted $p.borderActiveColor

	&_disabled_true &__wrapper
		opacity 0.5

	&__box
		border 1px solid $p.borderColor
		background-color $p.bgColor
		transition 0.1s ease-in background-color

	&_checked_true &__wrapper:hover &__box
		background-color $p.checkedBgColor

	&_checked_true &__box
		background-color $p.checkedBgColor
		border-color $p.borderActiveColor

		&::after
			top ($p.width / 6)em
			left ($p.width / 2.5)em

			size ($p.width / 6)em ($p.width / 2)em

			border solid $p.checkedIconBgColor
			border-width 0 2px 2px 0
			transform rotate(45deg)
