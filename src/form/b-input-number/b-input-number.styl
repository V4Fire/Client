@import "form/b-input/b-input.styl"

$p = {
	width: 5em
}

b-input-number extends b-input
	&__input::-webkit-outer-spin-button
	&__input::-webkit-inner-spin-button
		-webkit-appearance none

	&__input
		text-align center
		-moz-appearance textfield

	&__range
		display flex
		flex-direction column

	&__arrow
		cursor pointer
