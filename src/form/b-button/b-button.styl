@import "super/i-data/i-data.styl"
@import "traits/i-access/i-access.styl"
@import "traits/i-visible/i-visible.styl"
@import "traits/i-width/i-width.styl"
@import "traits/i-size/i-size.styl"

$p = {
	accessHelpers: true
	visibleHelpers: true
	widthHelpers: true
	sizeHelpers: true
	dropdownHelpers: true
	progressHelpers: true
}

b-button extends i-data
	// @stlint-disable
	i-access({helpers: $p.accessHelpers})
	i-visible({helpers: $p.visibleHelpers})
	i-width({helpers: $p.widthHelpers, selector: ("" "&__button" "&__value")})
	i-size({helpers: $p.sizeHelpers})
	// @stlint-enable

	display inline-block
	user-select none

	&__root-wrapper
		flex-direction column

	&__root-wrapper
	&__button
	&__wrapper
		display flex
		width 100%
		min-height 100%

	&__button
		text-transform inherit
		border 0
		cursor pointer

		&:focus
			outline 0

		&:active
			{$p.onActive}

	&__cell
	&_progress_true &__progress
		display flex

	&__progress
		display none

	&__value
		if $p.width
			width $p.width

	&__dropdown &__dropdown-content
		padding 0

	&_upper_true &__button
		text-transform uppercase
