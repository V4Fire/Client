.g-slider
	overflow-x auto
	white-space nowrap
	display flex
	scroll-snap-type x mandatory

	&_horizontal_true
		scroll-snap-type x mandatory

	&_vertical_true
		flex-direction column
		scroll-snap-type y mandatory
		height 300px
		overflow-y scroll

	& > *
		scroll-snap-align start

	&__slide_snap_start
		scroll-snap-align start

	&__slide_snap_center
		scroll-snap-align center

	&__slide_snap_end
		scroll-snap-align end
