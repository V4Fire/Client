@import "super/i-block/i-block.styl"

$p = {
	size: 1rem
}

b-icon extends i-block
	display inline-flex
	justify-content center
	align-items center

	&__svg
		display block

		if $p.size
			size $p.size

	if $p.color
		color $p.color
		fill $p.color

	else
		color currentColor
		fill currentColor
