@import "super/i-block/i-block.styl"

$p = {
	size: 1em
}

b-icon extends i-block
	display inline-flex
	justify-content center
	align-items center

	&_size_full
		size 100%

	if $p.size
		&_size_auto
			size $p.size

	if $p.color
		color $p.color
		fill @color

	else
		color currentColor
		fill currentColor
