@import "super/i-data/i-data.styl"
@import "traits/i-access/i-access.styl"
@import "traits/i-visible/i-visible.styl"
@import "traits/i-size/i-size.styl"

$p = {
	accessHelpers: true
	visibleHelpers: true
	widthHelpers: true
	sizeHelpers: true
	messageHelpers: true
}

b-link extends i-data
	i-access({helpers: $p.accessHelpers})
	i-visible({helpers: $p.visibleHelpers})
	i-size({helpers: $p.sizeHelpers})
	display inline-block

	&__root-wrapper
	&__wrapper
		display flex
		box-sizing border-box
		width 100%

	&__wrapper
		align-items center
		cursor pointer

	&_underline_false &__link
		border-bottom 0

	&__link
		border 1px solid transparent
		border-bottom-color currentColor
		color currentColor
		text-decoration none

		&:focus
			outline 0
			border-style dotted

		&:hover
			color $p.hoverColor

		&:active
			{$p.onActive}

	&__g-icon
		display inline-block
		size 100%
