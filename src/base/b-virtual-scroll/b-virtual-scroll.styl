@import "super/i-data/i-data.styl"

$p = {
	transitionTime: 0.15s
}

b-virtual-scroll extends i-data
	position relative

	&__container
		box-sizing border-box
		width 100%

	&_container-height_true &__container
		contain paint
		will-change height

	&__tombstone
		display none

	&__tombstone-el
	&__option-el
		contain layout
		position absolute !important
		useGPU()
		will-change transform

	&__tombstone-el
		transition $p.transitionTime

	&__el_display_none
		display none !important
		animation-play-state paused

	&__scroll-runner
		absolute left 0 top 0
		size 1px
		transition transform 0.2s
		useGPU()
