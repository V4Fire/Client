@import "super/i-data/i-data.styl"

$p = {

}

b-virtual-scroll extends i-data
	width 100%

	&__container
		position relative
		box-sizing border-box
		width 100%

	&__tombstone-el
	&__option-el
		contain layout
		position absolute !important
		useGPU()
		will-change transform

	&__scroll-runner
		absolute left 0 top 0
		size 1px
		transition transform 0.2s
		useGPU()

	&__trigger
		absolute left 0 top 0
		size 1px
		opacity 0

	&_hidden_true
	&_requests-done_true &__tombstone-el
		display none !important
		animation-play-state paused

	&_container-size_true &__container
		contain paint
		will-change height

	&_axis_x
		overflow scroll

	&_requests-done_true &__tombstone-el
		display none
