@import "super/i-block/i-block.styl"
@import "traits/i-visible/i-visible.styl"

$p = {
	visibleHelpers: true
	bgColor: inherit
	scrollerSize: 6px
}

b-scroll extends i-block
	// @stlint-disable
	i-visible({helpers: $p.visibleHelpers})
	// @stlint-enable

	position relative
	display block
	height 100%
	background inherit

	&__root-wrapper
	&__scroll-wrapper-y
		height 100%

	&__root-wrapper
	&__scroll-wrapper
		background inherit

	&__scroll-wrapper
	&__scroller
	&__area
		display block

	&__root-wrapper
		overflow visible

	&_mobile_true &__area
		useGPU()

	&__area
		-webkit-overflow-scrolling touch
		max-width 100%
		max-height @max-width
		overflow auto

		&::-webkit-scrollbar
			visibility hidden

	&__scroll-wrapper
		text-align center

		&_hidden_true
			display none

	&__scroll
		display inline-block
		background-color $p.bgColor

	&__scroller
		position absolute
		cursor pointer
		user-select none

	&__scroll-wrapper-x
		absolute bottom 0 left 0
		width 100%

	&__scroll-x
		size inherit $p.scrollerSize

	&__scroller-x
		top 50%
		height $p.scrollerSize
		min-width 1em
		margin-top -($p.scrollerSize / 2)

	&__scroll-wrapper-y
		absolute top 0 right 0

	&__scroll-y
		size $p.scrollerSize inherit

	&__scroller-y
		left 50%
		width $p.scrollerSize
		min-height 1em
		margin-left -($p.scrollerSize / 2)
