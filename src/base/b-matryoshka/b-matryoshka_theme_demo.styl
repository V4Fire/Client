b-matryoshka_theme_demo extends b-matryoshka
	/theme &__item-wrapper
		display flex

	/theme &__marker
		width 16px

	/theme &__fold:before
		content "-"
		display block

		text-align center

	/theme &__matryoshka_folded_true &__fold:before
		content "+"

	/theme &__matryoshka_folded_true &__children
		display none

	/theme &__matryoshka_level_1
		margin-left 8px

	/theme &__matryoshka_level_2
		margin-left 16px
