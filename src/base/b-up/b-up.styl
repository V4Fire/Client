@import "super/i-block/i-block.styl"
@import "traits/i-visible/i-visible.styl"

$p = {
	visibleHelpers: true
}

b-up extends i-block
	// @stlint-disable
	i-visible({helpers: $p.visibleHelpers})
	// @stlint-enable

	fixed bottom 0 left 0
	zIndex(modal)

	display flex
	flex-direction column
	justify-content flex-end

	height 100%

	cursor pointer

	&__root-wrapper
		display flex
		flex-direction column
		align-items center

	&__a
		text-decoration none
		color currentColor

	&__up
		display block
