$p = {
	bgColor: white
	togglerBgColor: grey

	overlayBgColor: black
	overlayTransitionDuration: 0.15s

	transformTransitionDuration: 0.15s
	transitionTimingFn: cubic-bezier(0, 0, 0.64, 1.1)
}

b-bottom-slide
	&_hidden_true
		transition visibility 0.1s 0.3s

	&__window
		background-color $p.bgColor
		transition transform $p.transitionTimingFn $p.transformTransitionDuration

	&__toggler-stripe
		display flex
		justify-content center
		align-items center
		size 100% 24px

		border-radius 12px
		background-color $p.bgColor

	& [data-title]
		flex-row space-between center
		size 100% 44px

		transition background-color $p.transitionTimingFn $p.transformTransitionDuration
		user-select none

	&__sub-pages [data-title]
		padding-left 24px

	&_history_true &__back
		display block
		size 24px
		font-size 24px

	&__view
		size 100%
		padding 0 16px

	&__overlay
		background-color $p.overlayBgColor
		will-change opacity
		transition opacity 0.3s

	&__toggler
		size 24px 4px
		border-radius 100px
		background-color $p.togglerBgColor

	&_hidden_true
		transition opacity $p.overlayTransitionDuration, visibility $p.overlayTransitionDuration

	&__page_below_true
		opacity 0.5
		transform translateX(-10%)

	& [data-page]
		background-color $p.bgColor
		transition $p.transformTransitionDuration $p.transitionTimingFn transform, $p.transformTransitionDuration $p.transitionTimingFn opacity

	&__title_in-view_false
		fixed top 23px
		background-color $p.bgColor

	&_title-in-viewport_false &__content
		padding-top 44px
