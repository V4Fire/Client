@import "super/i-data/i-data.styl"
@import "traits/i-visible/i-visible.styl"

$p = {
	sideBarTransition: EASING_DURATION linear
	overlayTansition: EASING_DURATION ease-in
	visibleHelpers: true
}

b-sidebar extends i-data
	// @stlint-disable
	i-visible({helpers: $p.visibleHelpers})
	// @stlint-enable

	fixed top 0 left 0
	zIndex(modal)

	&
	&__root-wrapper
		size 100%

	&
	&__content-wrapper
		transform translateX(-100%)

	&__content-wrapper
		display inline-block

	if $p.sideBarTransition
		transition transform 0s $p.sideBarTransition

		&__content-wrapper
			transition transform $p.sideBarTransition

		&_opened_true
			transition none

	if $p.overlayBg
		&__over-wrapper
			zIndex(layer)
			display block
			opacity 0
			background $p.overlayBg

			if $p.overlayTansition
				transition opacity $p.overlayTansition

		&_opened_true &__over-wrapper
			opacity 1

	&_opened_true
	&_opened_true &__content-wrapper
		transform translateX(0)
