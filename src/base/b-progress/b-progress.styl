@import "super/i-block/i-block.styl"
@import "traits/i-visible/i-visible.styl"

$p = {
	width: 10em
	height: 0.5em
	pointWidth: 1px
	visibleHelpers: true
}

b-progress extends i-block
	// @stlint-disable
	i-visible({helpers: $p.visibleHelpers})
	// @stlint-enable

	&__line
	&__point
		height 100%

	&__point
		width $p.pointWidth
		float right

	&_progress_true &__progress
		display block
		size $p.width $p.height
